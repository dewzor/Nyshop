@using System.Web.Optimization
@using Webshop.Controllers
@using Webshop.Services

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewBag.Title - AspNet Store </title>

    <link href="@Url.Content("~/Content/index_style.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/register_style.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/thumbnail-gallery.css")"
          rel="stylesheet" type="text/css" />

    <link href="~/Content/hover.css" rel="stylesheet" type="text/css"/>

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
   
    <navbar class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#"><img class="logo" src="~/Images/logo.png" width="120px"" /></a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                    <li>@Html.ActionLink("Home", "Index", "Store")</li>
                    <li>@Html.ActionLink("Categories", "Categories", "Store")</li>
                    <li><a href="#">Policy</a></li>
                    <li>@Html.ActionLink("Shopping Cart", "Index", "ShoppingCart")</li>

                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        @Html.Action("AdminMenu", "AdminMenu")
                    }
                    
                </ul>
                
                
            </div>
        </div>
    </navbar>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer" class="navbar navbar-default text-center">

            <div class="col-md-12">
                <ul>
                    <li id="adress"><span class="glyphicon glyphicon-map-marker"></span>  Nordgatan 11</li>
                    <li id="phone"><span class="glyphicon glyphicon-phone"></span>  +83 070-5325232</li>
                    <li id="mail"><span class="glyphicon glyphicon-envelope"></span>  traders@support.se</li>
                </ul>
            </div>

            <div class="icons col-md-12">
                <ul>
                    <li><img class="hvr-float-shadow" src="~/Images/social-google-plus-square-button.png" /></li>
                    <li><img class="hvr-float-shadow" src="~/Images/social-google-plus-square-button.png" /></li>
                    <li><img class="hvr-float-shadow" src="~/Images/twitter-logo-on-black-background.png" /></li>
                </ul>
            </div>


        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~\Scripts\bootstrap.js"></script>
</body>
</html>
